@model List<LeaveStatusUpdateViewModel>
 
<h2>Update Leave Status</h2>
 
@foreach (var employee in Model)
{
    <h3>@employee.EmployeeName</h3>
    <table class="table">
        <thead>
        <tr>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Total Days</th>
            <th>Reason</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var leave in employee.Leaves)
        {
            <tr>
                <td>@leave.StartDate.ToShortDateString()</td>
                <td>@leave.EndDate.ToShortDateString()</td>
                <td>@leave.TotalDays</td>
                <td>@leave.Reason</td>
                <td>@leave.Status</td>
                <td>
                    <form asp-action="UpdateStatus" method="post">
                        <input type="hidden" name="leaveId" value="@leave.LeaveId"/>
                        <select name="status" asp-for="@leave.Status" asp-items="@(new SelectList(Enum.GetValues(typeof(LeaveStatus)).Cast<LeaveStatus>()))">
                        </select>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table> 
}
}