                        <span class="text-danger field-validation-valid" data-valmsg-for="GovernmentDocuments[${index}].IssueDate" data-valmsg-replace="true"></span>
                    </div>
                    <div class="form-group">
                        <label for="GovernmentDocuments_${index}__ExpiryDate" class="control-label">Expiry Date</label>
