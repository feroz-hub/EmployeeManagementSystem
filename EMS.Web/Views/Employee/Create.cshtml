                        <span class="text-danger field-validation-valid" data-valmsg-for="Experiences[${index}].EndDate" data-valmsg-replace="true"></span>
                    </div>
                    <div class="form-group">
                        <label for="Experiences_${index}__Responsibilities" class="control-label">Responsibilities</label>
                        <input class="form-control" type="text" id="Experiences_${index}__Responsibilities" name="Experiences[${index}].Responsibilities" value="" />
                        <span class="text-danger field-validation-valid" data-valmsg-for="Experiences[${index}].Responsibilities" data-valmsg-replace="true"></span>
                    </div>
                    <button type="button" class="btn btn-danger" onclick="removeExperience(this)">Remove</button>
                </div>`;
        $('#experiences-list').append(experienceHtml);
    }
    function removeExperience(button) {
        $(button).closest('.experience-item').remove();
    }
    function addGovernmentDocument() {
        var index = $('#government-documents-list .government-document-item').length;
        var documentHtml = `
                <div class="government-document-item">
                    <div class="form-group">
                        <label for="GovernmentDocuments_${index}__DocumentType" class="control-label">Document Type</label>
                        <select class="form-control" id="GovernmentDocuments_${index}__DocumentType" name="GovernmentDocuments[${index}].DocumentType">
                            <option value="Passport">Passport</option>
                            <option value="DriverLicense">Driver License</option>
                            <option value="WorkPermit">Work Permit</option>
