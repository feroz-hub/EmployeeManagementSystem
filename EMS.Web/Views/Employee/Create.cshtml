    function addCertification() {
        var index = $('#certifications-list .certification-item').length;
        var certificationHtml = `
                <div class="certification-item">
                    <div class="form-group">
                        <label for="Certifications_${index}__CertificationName" class="control-label">Certification Name</label>
                        <input class="form-control" type="text" id="Certifications_${index}__CertificationName" name="Certifications[${index}].CertificationName" value="" />
                        <span class="text-danger field-validation-valid" data-valmsg-for="Certifications[${index}].CertificationName" data-valmsg-replace="true"></span>
                    </div>
                    <div class="form-group">
                        <label for="Certifications_${index}__IssuingOrganization" class="control-label">Issuing Organization</label>
