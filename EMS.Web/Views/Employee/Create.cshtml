                    </div>
                    <div class="form-group">
                        <label for="Certifications_${index}__IssueDate" class="control-label">Issue Date</label>
                        <input class="form-control" type="date" id="Certifications_${index}__IssueDate" name="Certifications[${index}].IssueDate" value="" />
                        <span class="text-danger field-validation-valid" data-valmsg-for="Certifications[${index}].IssueDate" data-valmsg-replace="true"></span>
                    </div>
                    <div class="form-group">
                        <label for="Certifications_${index}__ExpiryDate" class="control-label">Expiry Date</label>
                        <input class="form-control" type="date" id="Certifications_${index}__ExpiryDate" name="Certifications[${index}].ExpiryDate" value="" />
                        <span class="text-danger field-validation-valid" data-valmsg-for="Certifications[${index}].ExpiryDate" data-valmsg-replace="true"></span>
                    </div>
                    <button type="button" class="btn btn-danger" onclick="removeCertification(this)">Remove</button>
                </div>`;
        $('#certifications-list').append(certificationHtml);
    }
    function removeCertification(button) {
        $(button).closest('.certification-item').remove();
    }
</script>
}


