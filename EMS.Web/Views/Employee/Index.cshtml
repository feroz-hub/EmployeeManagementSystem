@model IEnumerable<EmployeeModel>
<script src="~/js/modal.js" asp-append-version="true"></script>
@{
    ViewData["Title"] = "Employees";
}
<div class="d-flex justify-content-between mb-3">
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-person-plus"> Add Employee</i></a>
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#calculateSalariesModal">
        <i class="bi bi-cash-stack"> CalculateSalary</i>
    </button>
</div>

<hr/>

<div class="card mb-4">
    <div class="card-header">
        Employees
    </div>
    <div class="card-body">
        <table id="datatablesSimple" class="rounded-table">
            <thead>
            <tr>
                <th>Name</th>
                <th>Employee Type</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.EmployeeType</td>
                    <td>@employee.DepartmentType</td>
                    <td>
                            <a asp-action="Details" asp-route-id="@employee.EmployeeId" class="btn btn-secondary">Details</a>
                        <a asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-primary">Edit</a>
                       
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@await Html.PartialAsync("_CalculateSalary")