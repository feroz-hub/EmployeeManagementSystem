@model IEnumerable<EmployeeModel>

@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

<a asp-action="Create" class="btn btn-primary">Add Employee</a>
<div class="card-body">
    <table id="datatablesSimple">
        <thead>
        <tr>
            <th>Name</th>
            <th>Employee Type</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.EmployeeType</td>
                <td>@employee.DepartmentType</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@employee.EmployeeId" class="btn btn-secondary">Details</a>
                    <a asp-action="Delete" asp-route-id="@employee.EmployeeId" class="btn btn-danger">Delete</a>
                    <a asp-action="Index" controller="Certification" asp-route-employeeId="@employee.EmployeeId" class="btn btn-info">Manage Certifications</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
