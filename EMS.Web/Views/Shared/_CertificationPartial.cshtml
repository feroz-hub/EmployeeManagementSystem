@model List<CertificationModel>


@for (int i = 0; i < Model.Count; i++)
{
    <div class="form-group">
        <label asp-for="@Model[i].CertificationName"></label>
        <input asp-for="@Model[i].CertificationName" class="form-control" />
        <span asp-validation-for="@Model[i].CertificationName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model[i].IssuingOrganization"></label>
        <input asp-for="@Model[i].IssuingOrganization" class="form-control" />
        <span asp-validation-for="@Model[i].IssuingOrganization" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model[i].IssueDate"></label>
        <input asp-for="@Model[i].IssueDate" class="form-control" type="date" />
        <span asp-validation-for="@Model[i].IssueDate" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="@Model[i].ExpiryDate"></label>
        <input asp-for="@Model[i].ExpiryDate" class="form-control" type="date" />
        <span asp-validation-for="@Model[i].ExpiryDate" class="text-danger"></span>
    </div>
}
