@model CertificationModel

<div class="modal fade" id="deleteCertificationModal" tabindex="-1" role="dialog" aria-labelledby="deleteCertificationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteCertificationModalLabel">Delete Certificate</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this qualification?</p>
                <dl class="row">
                    <dt class="col-sm-4">
                        CertificateName
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CertificationName)
                    </dd>
                    <dt class="col-sm-4">
                        IssuingOrganization
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.IssuingOrganization)
                    </dd>
                    <dt class="col-sm-4">
                        IssueDate
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.IssueDate)
                    </dd>
                    <dt class="col-sm-4">
                        ExpiryDate
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.ExpiryDate)
                    </dd>
                </dl>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete"  asp-controller="Certification"method="post">
                    <input type="hidden" asp-for="CertificationId" />
                    <input type="hidden" asp-for="EmployeeId" value="@ViewBag.EmployeeId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Confirm</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            $('#deleteCertificationModal').modal('show');
        });
    </script>
}
