@model ExperienceModel

<div class="modal fade" id="deleteExperienceModal" tabindex="-1" role="dialog" aria-labelledby="deleteExperienceModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteExperienceModalLabel">Delete Experience</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this experience?</p>
                <dl class="row">
                    <dt class="col-sm-4">Company Name</dt>
                    <dd class="col-sm-8">@Model.CompanyName</dd>

                    <dt class="col-sm-4">Job Title</dt>
                    <dd class="col-sm-8">@Model.JobTitle</dd>

                    <dt class="col-sm-4">Start Date</dt>
                    <dd class="col-sm-8">@Model.StartDate.ToShortDateString()</dd>

                    <dt class="col-sm-4">End Date</dt>
                    <dd class="col-sm-8">
                        @(Model.EndDate.HasValue ? Model.EndDate.Value.ToShortDateString() : "Present")
                    </dd>

                    <dt class="col-sm-4">Responsibilities</dt>
                    <dd class="col-sm-8">@Model.Responsibilities</dd>
                </dl>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" asp-controller="Experiences" method="post">
                    <input type="hidden" asp-for="ExperienceId" />
                    <input type="hidden" name="EmployeeId" value="@ViewBag.EmployeeId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Confirm</button>
                </form>
            </div>
        </div>
    </div>
</div>
