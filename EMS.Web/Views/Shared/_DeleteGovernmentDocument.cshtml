@model GovernmentDocumentModel

<div class="modal fade" id="deleteGovernmentDocumentModal" tabindex="-1" role="dialog" aria-labelledby="deleteGovernmentDocumentModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteGovernmentDocumentModalLabel">Delete Government Document</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this government document?</p>
                <dl class="row">
                    <dt class="col-sm-4">
                        Document Type
                    </dt>
                    <dd class="col-sm-8">
                        @Model.DocumentType
                    </dd>
                    <dt class="col-sm-4">
                        Document Number
                    </dt>
                    <dd class="col-sm-8">
                        @Model.DocumentNumber
                    </dd>
                    <dt class="col-sm-4">
                        Issue Date
                    </dt>
                    <dd class="col-sm-8">
                        @Model.IssueDate.ToShortDateString()
                    </dd>
                    <dt class="col-sm-4">
                        Expiry Date
                    </dt>
                    <dd class="col-sm-8">
                        @Model.ExpiryDate?.ToShortDateString()
                    </dd>
                </dl>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" asp-controller="GovernmentDocument" method="post">
                    <input type="hidden" asp-for="DocumentId" />
                    <input type="hidden" asp-for="EmployeeId"value="@ViewBag.EmployeeId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Confirm</button>
                </form>
            </div>
        </div>
    </div>
</div>
