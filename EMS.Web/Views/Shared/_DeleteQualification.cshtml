@model QualificationModel

<div class="modal fade" id="deleteQualificationModal" tabindex="-1" role="dialog" aria-labelledby="deleteQualificationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteQualificationModalLabel">Delete Qualification</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this qualification?</p>
                <dl class="row">
                    <dt class="col-sm-4">
                        Degree
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Degree)
                    </dd>
                    <dt class="col-sm-4">
                        Institution
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Institution)
                    </dd>
                    <dt class="col-sm-4">
                        Graduation Date
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.GraduationDate)
                    </dd>
                    <dt class="col-sm-4">
                        Grade
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Grade)
                    </dd>
                </dl>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete"  asp-controller="Qualifications"method="post">
                    <input type="hidden" asp-for="QualificationId" />
                    <input type="hidden" asp-for="EmployeeId" value="@ViewBag.EmployeeId" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Confirm</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            $('#deleteQualificationModal').modal('show');
        });
    </script>
}
