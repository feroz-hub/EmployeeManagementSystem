@model QualificationModel

<div class="modal fade" id="editQualificationModal" tabindex="-1" role="dialog" aria-labelledby="editQualificationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editQualificationModalLabel">Edit Qualification</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Edit" asp-controller="Qualifications" method="post">
                    <div class="form-group">
                        <label asp-for="Degree" class="control-label"></label>
                        <input asp-for="Degree" class="form-control" />
                        <span asp-validation-for="Degree" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Institution" class="control-label"></label>
                        <input asp-for="Institution" class="form-control" />
                        <span asp-validation-for="Institution" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GraduationDate" class="control-label"></label>
                        <input asp-for="GraduationDate" class="form-control" />
                        <span asp-validation-for="GraduationDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Grade" class="control-label"></label>
                        <input asp-for="Grade" class="form-control" />
                        <span asp-validation-for="Grade" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="EmployeeId" value="@ViewBag.EmployeeId" />
                    <input type="hidden" asp-for="QualificationId" />
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            $('#editQualificationModal').modal('show');
        });
    </script>
}
