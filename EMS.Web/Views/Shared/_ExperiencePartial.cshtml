@model List<ExperienceModel>

@for (int i = 0; i < Model.Count; i++)
{
    <div class="form-group">
        <label asp-for="@Model[i].CompanyName"></label>
        <input asp-for="@Model[i].CompanyName" class="form-control" />
        <span asp-validation-for="@Model[i].CompanyName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model[i].JobTitle"></label>
        <input asp-for="@Model[i].JobTitle" class="form-control" />
        <span asp-validation-for="@Model[i].JobTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model[i].StartDate"></label>
        <input asp-for="@Model[i].StartDate" class="form-control" type="date" />
        <span asp-validation-for="@Model[i].StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model[i].EndDate"></label>
        <input asp-for="@Model[i].EndDate" class="form-control" type="date" />
        <span asp-validation-for="@Model[i].EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model[i].Responsibilities"></label>
        <input asp-for="@Model[i].Responsibilities" class="form-control" />
        <span asp-validation-for="@Model[i].Responsibilities" class="text-danger"></span>
    </div>
    
}