@model List<GovernmentDocumentModel>

@for (int i = 0; i < Model.Count; i++)
{
    <div class="form-group">
        <label asp-for="@Model[i].DocumentType"></label>
        <select asp-for="@Model[i].DocumentType" class="form-control" asp-items="Html.GetEnumSelectList<DocumentType>()"></select>
        <span asp-validation-for="@Model[i].DocumentType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model[i].DocumentNumber"></label>
        <input asp-for="@Model[i].DocumentNumber" class="form-control" />
        <span asp-validation-for="@Model[i].DocumentNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model[i].IssueDate"></label>
        <input asp-for="@Model[i].IssueDate" class="form-control" type="date" />
        <span asp-validation-for="@Model[i].IssueDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model[i].ExpiryDate"></label>
        <input asp-for="@Model[i].ExpiryDate" class="form-control" type="date" />
        <span asp-validation-for="@Model[i].ExpiryDate" class="text-danger"></span>
    </div>
}